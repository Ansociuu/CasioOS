#include <stdio.h>
#include <string.h>
#include <stdlib.h>

void clear_screen() {
    printf("\033[H\033[J"); // Mã ANSI để xóa màn hình
}

void show_help() {
    printf("Available commands:\n");
    printf("  clear - Clear the screen\n");
    printf("  help  - Show this help menu\n");
    printf("  calc  - Simple Casio-like calculator\n");
    printf("  exit  - Exit the CLI\n");
}

void simple_calculator() {
    double a, b;
    char op;
    printf("Enter expression (e.g., 5 + 3): ");
    scanf("%lf %c %lf", &a, &op, &b);
    switch (op) {
        case '+': printf("Result: %.2lf\n", a + b); break;
        case '-': printf("Result: %.2lf\n", a - b); break;
        case '*': printf("Result: %.2lf\n", a * b); break;
        case '/': 
            if (b != 0)
                printf("Result: %.2lf\n", a / b);
            else
                printf("Error: Division by zero!\n");
            break;
        default: printf("Invalid operation!\n");
    }
}

int main() {
    char command[50];
    printf("Simple CLI - Type 'help' for commands\n");
    while (1) {
        printf("> ");
        scanf("%s", command);
        if (strcmp(command, "clear") == 0) {
            clear_screen();
        } else if (strcmp(command, "help") == 0) {
            show_help();
        } else if (strcmp(command, "calc") == 0) {
            simple_calculator();
        } else if (strcmp(command, "exit") == 0) {
            break;
        } else {
            printf("Unknown command: %s. Type 'help' for list of commands.\n", command);
        }
    }
    return 0;
}
